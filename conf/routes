# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET    /                     controllers.Entrance.index()
GET    /index                controllers.Entrance.index()
GET    /playing              controllers.Entrance.playing()
GET    /gog                  controllers.Entrance.gog()
GET    /resources            controllers.Entrance.resources()

#Login-Logout
POST   /                     controllers.Entrance.login()
GET    /logout               controllers.Entrance.logout()

#Register
POST   /register             controllers.Entrance.register()

#Security questions
POST   /security             controllers.Entrance.security()

#Recover Password
GET    /recoverPassword      controllers.RecoverPassword.index()
POST   /isUser               controllers.RecoverPassword.isUser()
POST   /secureQuestions      controllers.RecoverPassword.secureQuestions()

#Survey page
GET    /survey               controllers.SurveyController.index()
POST   /stageOne             controllers.SurveyController.stageOne()
POST   /stageTwo             controllers.SurveyController.stageTwo()
POST   /stageThree           controllers.SurveyController.stageThree()
POST   /stageFour            controllers.SurveyController.stageFour()
POST   /stageFive            controllers.SurveyController.stageFive()

#Admin
GET    /admin                controllers.Admin.index()

#Account
GET    /landing              controllers.Account.index()
POST    /createPassport              controllers.Account.createPassport()

# Import Secure routes
#*     /                     module:secure

# Map static resources from the /public folder to the /assets URL path
GET    /assets/*file         controllers.Assets.at(path="/public", file)
